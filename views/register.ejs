                        </div>

                        <button id="btn" type="submit" class="btn btn-default center-block">注册</button>
                    </form>
                </div>
            </div>
        <div>
        <script>
            $('#btn').click(function(event) {
                /* Act on the event */
                console.log(1);
                $.post('/register',{
                    "username" : $("[name=username]").val(),
                    "password" : $("[name=password]").val()
                },function (data) {
                    console.log(data);
                })
            });
        </script>
